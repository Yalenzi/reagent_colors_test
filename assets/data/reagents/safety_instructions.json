{
  "safety_instructions": {
    "general_laboratory_safety": {
      "title": "General Laboratory Safety Protocol",
      "mandatory_requirements": [
        "Always wear appropriate personal protective equipment (PPE)",
        "Work in well-ventilated areas or use fume hoods",
        "Ensure emergency eyewash and safety shower access",
        "Keep emergency contact numbers readily available",
        "Never work alone when handling hazardous chemicals",
        "Maintain clean, organized workspace"
      ],
      "required_ppe": [
        "Chemical-resistant safety goggles",
        "Chemical-resistant gloves (nitrile or neoprene)",
        "Lab coat with long sleeves",
        "Closed-toe chemical-resistant shoes",
        "Respirator when necessary"
      ],
      "emergency_procedures": {
        "chemical_spill": {
          "title": "Emergency Procedures - Chemical Spill",
          "steps": [
            "Evacuate area immediately if large spill",
            "Alert others in the laboratory",
            "Wear appropriate protective equipment",
            "Contain spill using appropriate absorbent materials",
            "Neutralize acid with sodium bicarbonate if necessary",
            "Dispose of contaminated materials according to hazardous waste protocols",
            "Clean area thoroughly with water",
            "Document incident and report to supervisor"
          ]
        },
        "skin_contact": {
          "title": "Skin Contact",
          "steps": [
            "Flush affected area immediately with large amounts of cold water",
            "Remove contaminated clothing",
            "Continue flushing for at least 15-20 minutes",
            "Do not use neutralizing agents on skin",
            "Seek medical attention if burning or irritation persists",
            "Document the incident"
          ]
        },
        "eye_contact": {
          "title": "Eye Contact",
          "steps": [
            "Flush eyes immediately with emergency eyewash",
            "Keep eyes open during flushing",
            "Continue flushing for at least 15-20 minutes",
            "Remove contact lenses if present",
            "Seek immediate medical attention",
            "Do not rub eyes"
          ]
        },
        "inhalation": {
          "title": "Inhalation",
          "steps": [
            "Move person to fresh air immediately",
            "Keep person in comfortable breathing position",
            "Loosen tight clothing",
            "Monitor breathing and consciousness",
            "Seek medical attention if breathing difficulties occur",
            "Do not give anything by mouth"
          ]
        }
      }
    },
